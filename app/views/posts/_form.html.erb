
<%= form_for @post do |f|%>
    <%=f.label :title%>
    <%=f.text_field :title%> <br>
    <%=f.label :content%>
    <%=f.text_field :content%> <br>

    <%= f.collection_check_boxes :category_ids, @categories, :id, :name%>
    <%= f.fields_for :categories, @post.categories.build do |name| %>
        <%= name.text_field :name %>
    <% end %>

    <%= f.submit "Create Post"%>
<%end%>