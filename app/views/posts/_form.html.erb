
<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br><br>
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name, include_blank: true %>
    <br><br>
    <%= f.fields_for :categories do |cf| %>
        <%= cf.label "and/or Add a New Category" %>
        <%= cf.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>